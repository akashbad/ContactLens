     lang: en_US
    </script>
%body.main
.navbar
  .navbar-inner
    %a.brand{:href=>"/"} ContactLens
    - if user_signed_in?
      %u1.nav
        %li
          %a{:href=>"/approve"} Approve
      %u1.nav
        %li
          %a{:href=>"/show"} Show
      %u1.nav
        %li
          = link_to('Logout', destroy_user_session_path, :method => :delete)
          

= yield